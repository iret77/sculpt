# Hello World (tradition kept)
# Minimal deterministic example with no ND.

@meta target=cli

module(HelloWorld):
  use(cli.ui)
  use(cli.input) as input

  flow(App):
    start > Show

    state(Show):
      ui.text("Hallo", color: "yellow")
      ui.text("Welt", color: "blue")
      on input.key(Esc) > Exit
    end

    state(Exit):
      terminate
    end
  end

end
