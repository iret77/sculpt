# Hello World (tradition kept)
# Minimal deterministic example with no ND.

@meta target=cli

module(HelloWorld):

  flow(App):
    start > Show

    state(Show):
      render text("Hallo", color: "yellow")
      render text("Welt", color: "blue")
      on key(Esc) > Exit
    end

    state(Exit):
      terminate
    end
  end

end
