# Native Window Demo (macOS GUI)
# Goal: show a real window with text + button.

@meta target=gui

module(NativeWindow):
  use(gui.ui)
  use(gui.input) as input

  flow(App):
    start > Main

    state(Main):
      ui.text("SCULPT Native Demo", color: "yellow")
      ui.text("Click the button to open an OK modal", color: "blue")
      ui.button("Open OK", action: "modal.ok")
      on input.key(Esc) > Exit
    end

    state(Exit):
      terminate
    end
  end

end
