# Snake (High ND)
# Goal: minimal code, large solution space.
# Most of the game design is delegated to the LLM.

@meta target=cli

module(SnakeHighND):
  use(cli.ui)
  use(cli.input, as: input)

  # Main flow
  flow(Game):
    start > Title

    state(Title):
      ui.text("SNAKE", color: "yellow")
      ui.text("Press Enter", color: "blue")
      on input.key(Enter) > Play
      on input.key(Esc)   > Exit
    end

    state(Play):
      on tick > Play
      on done > Title
      on input.key(Esc) > Exit
    end

    state(Exit):
      terminate
    end
  end

  # Minimal state (intentionally sparse)
  state():
    speedMs = 160
    score = 0
  end

  rule(tick):
    on tick:
      score += 1
    end
  end

  rule(finish):
    when score >= 10:
      emit done
    end
  end

  # High-ND block: most of the game definition is delegated to the LLM
  nd(designSnake):
    propose game("snake", size: 10)
    satisfy(
      playable(),
      funToLearn(),
      usesKeys("WASD"),
      loopedGameplay()
    )
  end
end
